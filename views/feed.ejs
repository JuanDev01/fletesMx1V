<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <div>
            <a href="/post/<%= posts[i]._id%>">
              <h3 class="" src="<%= posts[i].title%>"><%= posts[i].title%></h3>
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
            <h5 class="" src="<%= posts[i].caption%>"><%= posts[i].caption%></h5>
              <h5 class="" src="<%= posts[i].contactInfo%>">Contact Info: <%= posts[i].contactInfo%></h5>
              <h5 class="" src="<%= posts[i].description%>">Description: <%= posts[i].description%></h5>
              <h5 class="" src="<%= posts[i].numberOfUnits%>"># Of Units: <%= posts[i].numberOfUnits%></h5>
          </div>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>